---
import BaseLayout from "../layouts/BaseLayout.astro";
import {
    APP_SCHEME_RESET_PASSWORD,
    APP_STORE_URL,
    GOOGLE_PLAY_URL,
} from "../config/site";
---

<BaseLayout
    title="Şifre Sıfırlama - Kafadar"
    description="Kafadar uygulamasında şifre sıfırlama bağlantısı."
    noindex={true}
>
    <main class="min-h-screen bg-gray-50 flex items-center justify-center px-4">
        <section
            class="w-full max-w-xl bg-white border border-gray-100 shadow-xl rounded-3xl p-8 text-center"
        >
            <h1 class="text-3xl font-bold text-gray-900 mb-3">Şifre Sıfırlama</h1>
            <p class="text-gray-600 mb-6">
                Uygulama otomatik açılmazsa aşağıdaki butona dokun.
            </p>
            <a
                id="open-reset"
                href={APP_SCHEME_RESET_PASSWORD}
                class="inline-flex items-center justify-center rounded-xl bg-primary-600 px-5 py-3 text-white font-semibold hover:bg-primary-700 transition-colors mb-4"
            >
                Uygulamada Aç
            </a>
            <div class="flex justify-center gap-3">
                <a
                    href={APP_STORE_URL}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center rounded-xl border border-gray-300 px-4 py-2 font-medium text-gray-700 hover:bg-gray-50"
                >
                    App Store
                </a>
                <a
                    href={GOOGLE_PLAY_URL}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center rounded-xl border border-gray-300 px-4 py-2 font-medium text-gray-700 hover:bg-gray-50"
                >
                    Google Play
                </a>
            </div>
        </section>
    </main>
    <script define:vars={{ APP_SCHEME_RESET_PASSWORD }} is:inline>
        window.setTimeout(() => {
            window.location.href = APP_SCHEME_RESET_PASSWORD;
        }, 250);
    </script>
</BaseLayout>
